@model PruebaUnitaria.Models.Proveedore

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PruebaUnitaria</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 15px;
        }

        .card-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control-plaintext {
            display: block;
            width: 100%;
            padding: 0.375rem 0;
            margin-bottom: 0;
            line-height: 1.5;
            color: #212529;
            background-color: transparent;
            border: solid transparent;
            border-width: 1px 0;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            border-radius: 5px;
            padding: 10px 20px;
            color: white;
            text-decoration: none;
            margin-right: 10px;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            border-radius: 5px;
            padding: 10px 20px;
            color: white;
            text-decoration: none;
        }

            .btn-secondary:hover {
                background-color: #565e64;
                border-color: #43484d;
            }

        .text-center {
            text-align: center;
        }

        .mt-5 {
            margin-top: 3rem;
        }

        h2 {
            margin-bottom: 20px;
        }

        h3 {
            margin-bottom: 20px;
            color: #dc3545;
        }

        .fa {
            margin-right: 5px;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mt-5">Eliminar Proveedor</h2>
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Proveedor</h4>
            </div>
            <div class="card-body">
                <h3 class="text-center">¿Estás seguro de que quieres eliminar el proveedor?</h3>
                <dl class="row">
                    <dt class="col-sm-3">IdProveedor</dt>
                    <dd class="col-sm-9">@Model.IdProveedor</dd>

                    <dt class="col-sm-3">Código</dt>
                    <dd class="col-sm-9">@Model.Codigo</dd>

                    <dt class="col-sm-3">Razón Social</dt>
                    <dd class="col-sm-9">@Model.RazonSocial</dd>

                    <dt class="col-sm-3">RFC</dt>
                    <dd class="col-sm-9">@Model.Rfc</dd>
                </dl>
                <div class="actions">
                    <form id="deleteForm" asp-action="Delete" method="post" class="form-inline">
                        <input type="hidden" name="id" value="@Model.IdProveedor" />
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            $(document).ready(function () {
                $('#deleteForm').on('submit', function (e) {
                    e.preventDefault();

                    
                    var proveedorId = $("input[name='id']").val();

                   
                    $.ajax({
                        url: '@Url.Action("DeleteConfirmed", "Proveedores")',
                        method: 'POST',
                        data: {
                            id: proveedorId,
                            deleteProducts: false 
                        },
                        success: function (data) {
                            if (data.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Éxito!',
                                    text: data.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                }).then(function () {
                                    window.location.href = '@Url.Action("Index", "Proveedores")';
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error!',
                                    text: data.message
                                }).then(function () {
                                    if (data.message.includes("¿Desea eliminar también los productos?")) {
                                        
                                        Swal.fire({
                                            icon: 'warning',
                                            title: 'Confirmación',
                                            text: 'El proveedor tiene productos asociados. ¿Desea eliminar también los productos?',
                                            showCancelButton: true,
                                            confirmButtonText: 'Sí, eliminar todo',
                                            cancelButtonText: 'No, cancelar'
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                $.ajax({
                                                    url: '@Url.Action("DeleteConfirmed", "Proveedores")',
                                                    method: 'POST',
                                                    data: {
                                                        id: proveedorId,
                                                        deleteProducts: true
                                                    },
                                                    success: function (data) {
                                                        if (data.success) {
                                                            Swal.fire({
                                                                icon: 'success',
                                                                title: 'Éxito!',
                                                                text: data.message,
                                                                showConfirmButton: false,
                                                                timer: 2000
                                                            }).then(function () {
                                                                window.location.href = '@Url.Action("Index", "Proveedores")';
                                                            });
                                                        } else {
                                                            Swal.fire({
                                                                icon: 'error',
                                                                title: 'Error!',
                                                                text: data.message
                                                            });
                                                        }
                                                    },
                                                    error: function () {
                                                        Swal.fire({
                                                            icon: 'error',
                                                            title: 'Error!',
                                                            text: 'Hubo un problema al eliminar el proveedor.'
                                                        });
                                                    }
                                                });
                                            }
                                        });
                                    }
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: 'Hubo un problema al eliminar el proveedor.'
                            });
                        }
                    });
                });
            });
        </script>
    }
</body>

