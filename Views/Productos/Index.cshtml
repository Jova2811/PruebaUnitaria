@model IEnumerable<PruebaUnitaria.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PruebaUnitaria</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .neon-header {
            font-size: 2rem;
            font-weight: bold;
            color: #fff;
            text-align: center;
            padding: 20px;
            background: #000;
            border-radius: 10px;
            box-shadow: 0 0 5px #00e6e6, 0 0 10px #00e6e6, 0 0 20px #00e6e6, 0 0 40px #00e6e6;
            text-shadow: 0 0 5px #00e6e6, 0 0 10px #00e6e6, 0 0 20px #00e6e6, 0 0 40px #00e6e6;
        }

        .container-fluid {
            max-width: 1200px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
            background-color: white;
            border-radius: 10px;
        }

        h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        .fa {
            margin-right: 5px;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 5px;
        }
    </style>
</head>
<body>
     
    <div class="container-fluid">
        <h2 class="mt-5">Lista de Productos</h2>
        <div class="d-flex justify-content-center mb-3">
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Crear Nuevo</a>
        </div>

        <div class="table-responsive">
            <table id="productosTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>IdProducto</th>
                        <th>IdProveedor</th>
                        <th>Codigo</th>
                        <th>Descripcion</th>
                        <th>Unidad</th>
                        <th>Costo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdProducto</td>
                            <td>@item.IdProveedor</td>
                            <td>@item.Codigo</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Unidad</td>
                            <td>@item.Costo</td>
                            <td>
                                <div class="actions">
                                    <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-sm btn-info"><i class="fa fa-info-circle"></i> Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#productosTable').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas",
                    "zeroRecords": "No se encontraron coincidencias",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    },
                }
            });
        });
    </script>
</body>
</html>
