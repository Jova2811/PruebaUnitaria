@model IEnumerable<PruebaUnitaria.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PruebaUnitaria</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 900px;
            margin-top: 50px;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
        }

            .table th,
            .table td {
                padding: 0.75rem;
                vertical-align: middle;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: middle;
                border-bottom: 2px solid #dee2e6;
                background-color: #007bff;
                color: white;
                text-align: center;
            }

            .table tbody + tbody {
                border-top: 2px solid #dee2e6;
            }

            .table .table {
                background-color: #fff;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 5px;
            padding: 10px 20px;
            color: white;
            text-decoration: none;
            margin-bottom: 15px;
            display: inline-block;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .text-center {
            text-align: center;
        }

        .mt-5 {
            margin-top: 3rem;
        }

        h2 {
            margin-bottom: 20px;
        }

        .fa {
            margin-right: 5px;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mt-5">Index</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Create New</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>IdProducto</th>
                    <th>IdProveedor</th>
                    <th>Codigo</th>
                    <th>Descripcion</th>
                    <th>Unidad</th>
                    <th>Costo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.IdProveedor</td>
                        <td>@item.Codigo</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Unidad</td>
                        <td>@item.Costo</td>
                        <td>
                            <div class="actions">
                                <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> Edit</a>
                                <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-sm btn-info"><i class="fa fa-info-circle"></i> Details</a>
                                <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
